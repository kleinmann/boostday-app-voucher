{% import "include/cart-helper.twig" as cartHelper %}

{% set lineItem = services.cart.get('k10r-boost-voucher') %}
{% set codeEntity = lineItem.getItem.extension('ce_boostday_code') %}

{% if lineItem and codeEntity and services.cart.price.total %}
    {% do cartHelper.calculateVoucher(codeEntity) %}
{% endif %}
